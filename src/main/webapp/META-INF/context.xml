<?xml version="1.0" encoding="UTF-8"?>
<Context path="/">
    <WatchedResource>WEB-INF/web.xml</WatchedResource>
    <Resource
            name="jdbc/maria"
            auth="Container"
            type="javax.sql.DataSource"
            driverClassName="org.mariadb.jdbc.Driver"
            url="jdbc:mariadb://localhost:3306/kosa"
            username="root"
            password="passwd"
            maxActive="50"
            maxWait="-1" />
</Context>
